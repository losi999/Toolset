{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "lib": [
            "es6",
            "es7"
        ],
        "strict": true,
        "moduleResolution": "node",
        "strictNullChecks": false,
        "types": [
            "reflect-metadata",
            "jest"
        ],
        "rootDir": "src",
        "sourceMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    }
}