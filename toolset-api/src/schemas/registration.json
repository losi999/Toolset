{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Registration schema",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "username",
        "password",
        "displayName"
    ],
    "properties": {
        "username": {
            "type": "string",
            "minLength": 4
        },
        "password": {
            "type": "string",
            "minLength": 4
        },
        "displayName": {
            "type": "string",
            "minLength": 1
        }
    }
}