    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--require", "ts-node/register",
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/src/**/*.spec.ts"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to api-mongo",
            "port": 9001,
            "sourceMaps": true,
            "outFiles":[
                "${workspaceFolder}/dist/server.js"
            ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to api-dynamo",
            "port": 9002,
            "sourceMaps": true,
            "outFiles":[
                "${workspaceFolder}/dist/server.js"
            ]
        }
    ]
}