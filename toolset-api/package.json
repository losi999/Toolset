{
  "name": "toolset-api",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "test": "mocha --opts .mochaopts",
    "coverage": "nyc npm test",
    "typedoc": "typedoc --options typedoc.config.js src/",
    "lint": "tslint -c tslint.json src/**/*.{ts,tsx}",
    "build:dev": "webpack --watch",
    "build:prod": "webpack --mode production",
    "prestart": "webpack",
    "start": "cd ../toolset-environment && docker-compose up"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "aws-sdk": "^2.395.0",
    "bcryptjs": "2.4.3",
    "body-parser": "1.18.3",
    "cors": "2.8.5",
    "express": "4.16.4",
    "inversify": "5.0.1",
    "jsonwebtoken": "8.4.0",
    "mongoose": "5.4.7",
    "reflect-metadata": "0.1.13"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/chai": "^4.1.7",
    "@types/cors": "2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/express": "4.16.1",
    "@types/json-schema": "7.0.1",
    "@types/jsonwebtoken": "8.3.0",
    "@types/mocha": "^5.2.6",
    "@types/mongoose": "5.3.10",
    "chai": "^4.2.0",
    "dotenv": "6.2.0",
    "mocha": "^5.2.0",
    "nodemon": "1.18.9",
    "nyc": "^13.2.0",
    "source-map-support": "^0.5.10",
    "ts-loader": "5.3.3",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "typedoc": "^0.14.2",
    "typescript": "3.2.4",
    "webpack": "4.29.0",
    "webpack-cli": "3.2.1"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts",
      "src/inversify.config.ts",
      "src/server.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "all": true
  }
}
