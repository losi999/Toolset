{
  "name": "toolset-api",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "test": "jest",
    "test:dev": "mocha --opts .mochaopts --watch --watch-extensions ts",
    "coverage": "nyc npm test",
    "typedoc": "typedoc --options typedoc.config.js src/",
    "lint": "tslint -c tslint.json src/**/*.{ts,tsx}",
    "build:dev": "webpack --watch",
    "build:prod": "webpack --mode production",
    "start": "cd ../toolset-environment && docker-compose up"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/cors": "2.8.4",
    "@types/express": "4.16.1",
    "@types/jest": "^24.0.12",
    "@types/jsonwebtoken": "8.3.0",
    "@types/mongoose": "5.3.10",
    "@types/node": "^11.13.8",
    "ajv": "^6.10.0",
    "aws-sdk": "^2.395.0",
    "bcryptjs": "2.4.3",
    "body-parser": "1.18.3",
    "cors": "2.8.5",
    "express": "4.16.4",
    "inversify": "5.0.1",
    "jest": "^24.7.1",
    "jsonwebtoken": "8.4.0",
    "mongoose": "5.4.7",
    "nodemon": "1.18.9",
    "reflect-metadata": "0.1.13",
    "source-map-support": "^0.5.10",
    "ts-jest": "^24.0.2",
    "ts-loader": "5.3.3",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "typedoc": "^0.14.2",
    "typescript": "3.2.4",
    "webpack": "4.29.0",
    "webpack-cli": "3.2.1"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": ".*\\.spec\\.ts$",
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!src/*.ts"
    ],
    "coverageReporters": [
      "html"
    ],
    "moduleNameMapper": {
      "^@/(.+)$": "<rootDir>/src/$1"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
